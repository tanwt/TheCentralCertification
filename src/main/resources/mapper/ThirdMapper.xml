<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jike.certification.dao.ThirdDao">

    <sql id="baseSql">
        id,
        name,
        deleted,
        create_time,
        update_time
    </sql>

    <insert id="save" parameterType="com.jike.certification.model.third.Third"
            keyProperty="id" useGeneratedKeys="true">
        INSERT INTO third
        <trim prefix="(" suffix=")"  suffixOverrides=",">
            <if test="id != null" >
                id,
            </if>
            <if test="name != null" >
                name,
            </if>
        </trim>
        <trim prefix="VALUES(" suffix=")"  suffixOverrides=",">
            <if test="id != null" >
                #{id},
            </if>
            <if test="name != null" >
                #{name},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="com.jike.certification.model.third.Third">
        UPDATE third
        <set>
            <if test="name != null" >
                name = #{name},
            </if>
            <if test="deleted != null">
                deleted = #{deleted}
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="queryByLikeName" resultType="com.jike.certification.model.third.Third">
        SELECT <include refid="baseSql"/>
        FROM third
        WHERE deleted = 0
        AND name = "%${thirdName}%"
    </select>

    <select id="queryByName" resultType="com.jike.certification.model.third.Third">
        SELECT <include refid="baseSql"/>
        FROM third
        WHERE deleted = 0
        AND name = #{thirdName}
    </select>


</mapper>