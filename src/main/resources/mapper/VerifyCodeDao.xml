<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jike.certification.dao.VerifyCodeDao">

    <sql id="selectField">
        id,
        mail,
        mobile,
        code,
        verify_code,
        apply_ip,
        validate_ip,
        send_times,
        status,
        validate_time,
        create_time,
        update_time,
        deleted
    </sql>
    <insert id="save" parameterType="com.jike.certification.model.verify.VerifyCode" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO verify_code
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="mail != null">
                mail,
            </if>
            <if test="mobile != null">
                mobile,
            </if>
            <if test="code != null">
                code,
            </if>
            <if test="verifyCode != null">
                verify_code,
            </if>
            <if test="applyIp != null">
                apply_ip,
            </if>
            <if test="validateIp != null">
                validate_ip,
            </if>
            <if test="sendTimes != null">
                send_times,
            </if>
            <if test="status != null">
                status,
            </if>
            <if test="validateTime != null">
                validate_time,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="updateTime != null">
                update_time,
            </if>
            <if test="deleted != null">
                deleted,
            </if>
        </trim>
        <trim prefix="VALUE(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="mail != null">
                #{mail},
            </if>
            <if test="mobile != null">
                #{mobile},
            </if>
            <if test="code != null">
                #{code},
            </if>
            <if test="verifyCode != null">
                #{verifyCode},
            </if>
            <if test="applyIp != null">
                #{applyIp},
            </if>
            <if test="validateIp != null">
                #{validateIp},
            </if>
            <if test="sendTimes != null">
                #{sendTimes},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <if test="validateTime != null">
                #{validateTime},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="updateTime != null">
                #{updateTime},
            </if>
            <if test="deleted != null">
                #{deleted},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="com.jike.certification.model.verify.VerifyCode">
        UPDATE verify_code SET
        <trim suffixOverrides=",">
            <if test="mail != null">
                mail = #{mail},
            </if>
            <if test="mobile != null">
                mobile = #{mobile},
            </if>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="verifyCode != null">
                verify_code = #{verifyCode},
            </if>
            <if test="applyIp != null">
                apply_ip = #{applyIp},
            </if>
            <if test="validateIp != null">
                validate_ip = #{validateIp},
            </if>
            <if test="sendTimes != null">
                send_times = #{sendTimes},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="validateTime != null">
                validate_time = #{validateTime},
            </if>
            <if test="deleted != null">
                deleted = #{deleted},
            </if>
        </trim>
        where id = #{id}
    </update>

    <select id="queryLastValidCode" resultType="com.jike.certification.model.verify.VerifyCode">
        SELECT
        <include refid="selectField"/>
        FROM verify_code
        WHERE mail=#{mail}
        AND status = 0
        AND deleted = 0
        ORDER BY id DESC LIMIT 1
    </select>

</mapper>