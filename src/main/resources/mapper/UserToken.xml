<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jike.certification.dao.UserTokenDao">

    <sql id="selectField">
        id,
        token,
        third_id,
        user_id,
        expire_time,
        create_time,
        update_time
    </sql>

    <insert id="save" parameterType="com.jike.certification.model.user.UserToken" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO user_token
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="token != null">
                token,
            </if>
            <if test="thirdId != null">
                third_id,
            </if>
            <if test="userId != null">
                user_id,
            </if>
            <if test="expireTime != null">
                expire_time,
            </if>
        </trim>
        <trim prefix="VALUE(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="token != null">
                #{token},
            </if>
            <if test="thirdId != null">
                #{thirdId},
            </if>
            <if test="userId != null">
                #{userId},
            </if>
            <if test="expireTime != null">
                #{expireTime},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="com.jike.certification.model.user.UserToken">
        update user_token
        <set>
            <if test="token != null">
                token=#{token},
            </if>
            <if test="expireTime != null">
                expire_time=#{expireTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="deleteByUserIdList">
        update user_token
        set deleted = 1
        where id in
        <foreach collection="userIdList" item="userId" open="(" close=")" separator=",">
            #{userId}
        </foreach>
        and deleted = 0
    </update>

    <update id="deleteByToken">
        update user_token
        set deleted = 1
        where token = #{token}
        and deleted = 0
    </update>

    <select id="queryByToken" resultType="com.jike.certification.model.user.UserToken">
        select
        <include refid="selectField"/>
        from user_token
        where token = #{token}
        and deleted=0
    </select>

    <select id="queryByUserId" resultType="com.jike.certification.model.user.UserToken">
        select
        <include refid="selectField"/>
        from user_token
        where user_id = #{userId}
        and deleted=0
    </select>

    <select id="queryByUserIdList" resultType="com.jike.certification.model.user.UserToken">
        select
        <include refid="selectField"/>
        from user_token
        where user_id in
        <foreach collection="userIdList" item="userId" open="(" close=")" separator=",">
            #{userId}
        </foreach>
        and deleted=0
    </select>
</mapper>